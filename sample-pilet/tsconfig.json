{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "jsx": "react",
    "noLib": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es5",
    "sourceMap": true,
    "noEmit": true,
    "importHelpers": true,
    "lib": ["dom", "es2015", "es2018"]
  },
  "include": ["./src"]
}
